<div class="container">
  <style>
    .thumbnails {
      text-align:center;
    }
    .thumbnails > li {
      display: inline-block;
      *display:inline; /* ie7 fix */
      float: none; /* this is the part that makes it work */
    }
  </style>
  <div class="container">
    <%
      begin
        @items = Marshal::load(session["items"])
      rescue
        @items = Item.all
      end
    %>
    <% idx = @items.find_index {|item| item.permalink == params[:permalink]} %>
    <% idx_next = @items.find_index {|item| item.permalink == params['next'] } %>
    <% idx_prev = @items.find_index {|item| item.permalink == params['prev'] } %>
    <% prev_prev_link = @items[idx_prev-1].permalink %>
    <% prev_next_link = @items[idx].permalink %>
    <% next_prev_link = @items[idx].permalink %>
    <% next_next_link = @items[idx_next+1].nil? ? @items.first.permalink : @items[idx_next+1].permalink %>
    <ul class="pager">
      <li class="previous">
        <a href="<%= params['prev']%>?prev=<%= prev_prev_link %>&next=<%= prev_next_link %>">&larr; Anterior</a>
      </li>
      <li class="next">
        <a href="<%= params['next']%>?prev=<%= next_prev_link %>&next=<%= next_next_link %>">Pr&oacute;ximo &rarr;</a>
      </li>
    </ul>
  </div>
  <div class="container">
    <ul class="thumbnails">
      <li class="span10">
        <div class="thumbnail">
          <img src=<%= if @item.picture then @item.picture.full.length == 0 ? "http://placehold.it/640x480" : @item.picture.full end %> alt="<%= @item.title %>">
          <div class="caption">
            <h3><%= @item.title %> - R$<%= @item.price %></h3>
            <p><%= @item.description %></p>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="container">
    <ul class="pager">
      <li class="previous">
        <a href="<%= params['prev']%>?prev=<%= prev_prev_link %>&next=<%= prev_next_link %>">&larr; Anterior</a>
      </li>
      <li class="next">
        <a href="<%= params['next']%>?prev=<%= next_prev_link %>&next=<%= next_next_link %>">Pr&oacute;ximo &rarr;</a>
      </li>
    </ul>
  </div>
</div>
